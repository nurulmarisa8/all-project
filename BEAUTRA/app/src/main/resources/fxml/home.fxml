<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
    fx:controller="controller.HomeController"
    stylesheets="@/css/style.css"
    prefWidth="1220" prefHeight="690"
    style="-fx-background-color: #ffcccc;">
    <children>
        <!-- Header -->
        <Label text="Welcome to Beauty Aura" layoutX="30" layoutY="20"
            style="-fx-font-size: 38px; -fx-font-weight: bold; -fx-text-fill: #ff6666;"/>
        
        <!-- Search Bar -->
        <TextField fx:id="searchField" promptText="Cari Produk" layoutX="30" layoutY="80" prefWidth="500" prefHeight="40"
            style="-fx-background-radius: 24; -fx-font-size: 18px; -fx-background-color: #eeeeee;"/>
        <Button text="Tombol Cari" layoutX="550" layoutY="80" prefWidth="220" prefHeight="40"
            styleClass="primary-btn"/>
        
        <!-- Cart Icon -->
        <Button fx:id="cartIconBtn" layoutX="1150" layoutY="30" prefWidth="50" prefHeight="50" style="-fx-background-color: transparent;" onAction="#openCart">
            <graphic>
                <ImageView fitWidth="40" fitHeight="40" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/shopping-cart.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        
        <!-- Profile Icon -->
        <Button fx:id="profileBtn" layoutX="1090" layoutY="30" prefWidth="50" prefHeight="50" style="-fx-background-color: transparent;" onAction="#openProfile">
            <graphic>
                <ImageView fitWidth="40" fitHeight="40" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/user.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>


        <!-- Logout Button -->
        <Button fx:id="logoutBtn" layoutX="1150" layoutY="90" prefWidth="50" prefHeight="50" style="-fx-background-color: transparent;" onAction="#handleLogout">
            <graphic>
                <ImageView fitWidth="40" fitHeight="40" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@/images/logout.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        
        <!-- Kategori Produk -->
        <Label text="Kategori Produk" layoutX="30" layoutY="140"
            style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ff9999;"/>
        <HBox layoutX="30" layoutY="190" spacing="18">
            <children>
                <Button fx:id="forYouBtn" text="For You" styleClass="category-btn-active" onAction="#onForYou"/>
                <Button fx:id="skinCareBtn" text="SkinCare" styleClass="soft-btn" onAction="#onSkinCare"/>
                <Button fx:id="bodyCareBtn" text="BodyCare" styleClass="soft-btn" onAction="#onBodyCare"/>
                <Button fx:id="hairCareBtn" text="Hair Care" styleClass="soft-btn" onAction="#onHairCare"/>
                <Button fx:id="makeUpBtn" text="Make Up" styleClass="soft-btn" onAction="#onMakeUp"/>
            </children>
        </HBox>

        <!-- Produk Grid -->
        <FlowPane fx:id="productGrid" layoutX="10" layoutY="250" prefWidth="1200" prefHeight="400" hgap="24" vgap="24"/>

    </children>
</AnchorPane>
