<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.beautra.controller.ProductDetailController" padding="10">

    <Label fx:id="nameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <ImageView fx:id="productImage" fitHeight="200" fitWidth="200"/>
    <Label fx:id="descriptionLabel" wrapText="true"/>
    <Label fx:id="priceLabel" style="-fx-font-size: 16px; -fx-text-fill: green;"/>

</VBox>
